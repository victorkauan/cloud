<h1 class='title'>Carrinho de compras:</h1>
<ul class='list'>
  {{#each cartProducts}}
    <li class='list-card'>
      <div class='flex items-center justify-between'>
        <h2 class='text-xl font-bold'>{{this.name}}</h2>

        <form action='/favoritos/favoritar' method='POST' class='mb-0'>
          <input
            type='hidden'
            name='product_id'
            id='product_id'
            value='{{this.id}}'
          />
          <button type='submit'>
            <img
              src='/assets/icons/green-heart-{{#if this.favorited}}solid{{else}}outline{{/if}}.svg'
              alt='Ícone de favoritos'
              class='w-6 h-6'
            />
          </button>
        </form>
      </div>

      <p>{{this.description}}</p>
      <p class='font-bold text-2xl my-2'>{{this.formatted_price}}</p>
      <p><strong>Quantidade:</strong> {{this.quantity}}</p>
    </li>
  {{/each}}
</ul>